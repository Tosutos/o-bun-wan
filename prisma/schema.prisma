generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String            @id
  displayName String?
  grade       Int?
  totalPoints Int               @default(0)
  events      RecyclingEvent[]
  createdAt   DateTime          @default(now())
}

model RecyclingEvent {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  category   String
  confidence Float?
  size       String?
  points     Int
  createdAt  DateTime @default(now())
  imageUrl   String?
}
